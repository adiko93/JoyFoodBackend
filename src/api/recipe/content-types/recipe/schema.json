{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipes",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "servings": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "cooking_time": {
      "type": "integer",
      "required": true
    },
    "rating": {
      "type": "integer",
      "min": 0,
      "max": 5,
      "default": 0
    },
    "ingredients_categories": {
      "type": "component",
      "repeatable": true,
      "component": "recipes.ingredients-categories"
    },
    "steps_categories": {
      "type": "component",
      "repeatable": true,
      "component": "recipes.steps-categories"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "reviews": {
      "type": "component",
      "repeatable": true,
      "component": "recipes.reviews"
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category"
    }
  }
}
